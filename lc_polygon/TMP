! i.e., faster than poly_2 = poly_1
subroutine c1(poly_2, poly_1)
use polytype_module
implicit none
type(polystype), intent(out) :: poly_2
type(polystype), intent(in) :: poly_1
integer :: j, k
poly_2%c = poly_1%c
do j = 1, poly_1%c
  k = poly_1%s(j)%c
  poly_2%s(j)%c = k
  poly_2%s(j)%p(1:k,:) = poly_1%s(j)%p(1:k,:)
enddo
end subroutine c1

